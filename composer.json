{
  "name": "platform/mst",
  "description": "Platform Multi-Sistem Terintegrasi - PHP MVC Native",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "ext-mbstring": "*",
    "ext-zip": "*",
    "ext-dom": "*",
    "ext-fileinfo": "*",
    "ext-openssl": "*",
    "ext-gd": "*",
    "phpmailer/phpmailer": "^6.9",
    "phpoffice/phpspreadsheet": "^2.1",
    "dompdf/dompdf": "^2.0"
  },
  "autoload": {
    "classmap": ["app/Core"],
    "psr-4": {
      "App\\": "app/"
    },
    "files": ["app/Core/helpers.php"]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "post-install-cmd": [
      "composer dump-autoload -o"
    ],
    "post-update-cmd": [
      "composer dump-autoload -o"
    ]
  }
}